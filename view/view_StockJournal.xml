<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="form_stock_arStockJournal" model="ir.ui.view">
            <field name="name">Form Stock Journal</field>
            <field name="model">stock.journal</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_stock_journal_form"/>
            <field name="arch" type="xml">
				<data>
					<field name="user_id" position="after">
						<group name="group_1" colspan="4" col="2">
							<group name="group_1_1" colspan="1" col="2">
								<separator string="Default Setting" colspan="2"/>
								<field name="default_type"/>
								<field name="default_invoice_state"/>
								<field name="default_sequence_id"/>
								<field name="default_location_id"/>
								<field name="default_location_dest_id"/>
							</group>
							<group name="group_1_2" colspan="1" col="2">
								<separator string="Return Product Setting" colspan="2"/>
								<field name="allowed_return_product"/>
								<field name="stock_journal_return_id" attrs="{'required':[('allowed_return_product','=',True)]}"/>
								
							</group>			
							<group name="group_1_3" colspan="1" col="2">
								<separator string="Allowed Location" colspan="2"/>
								<field name="allowed_location_ids" nolabel="1" colspan="2"/>
							</group>						
							<group name="group_1_4" colspan="1" col="2">
								<separator string="Allowed Destination Location" colspan="2"/>
								<field name="allowed_location_dest_ids" nolabel="1" colspan="2"/>
							</group>															
						</group>
					</field>
				</data>
            </field>
        </record>
	</data>
</openerp>
